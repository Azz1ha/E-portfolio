{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #ff69b4 0%, #ffb6d9 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        margin: 0;
        padding: 0;
    }

    .navbar {
        background-color: #ff1493 !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .navbar-brand {
        font-weight: bold;
        font-size: 1.5em;
    }

    .nav-link {
        color: white !important;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
    }

    .nav-link:hover {
        color: #ffe0f0 !important;
        transform: translateX(5px);
        text-shadow: 0 0 10px rgba(255, 224, 240, 0.8), 0 0 20px rgba(255, 224, 240, 0.6);
    }

    .dropdown-menu {
        background-color: #ff1493 !important;
        border: none;
    }

    .dropdown-item {
        color: white !important;
        transition: background-color 0.3s ease;
    }

    .dropdown-item:hover {
        background-color: #ff69b4 !important;
    }

    footer {
        background-color: #ff1493 !important;
        color: white !important;
        margin-top: auto;
    }

    footer a {
        color: #ffe0f0 !important;
        text-decoration: none;
    }

    footer a:hover {
        color: white !important;
        text-decoration: underline;
    }

    /* Formulaire styles */
    .form-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .form-title {
        color: white;
        font-size: 2.5em;
        font-weight: bold;
        text-align: center;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .form-subtitle {
        color: #ffe0f0;
        font-size: 1.2em;
        text-align: center;
        margin-bottom: 40px;
        font-style: italic;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        color: white;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 1.1em;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1em;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #ff69b4;
        background: rgba(255, 255, 255, 0.2);
        box-shadow: 0 0 0 3px rgba(255, 105, 180, 0.2);
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .form-control option {
        background: #ff1493;
        color: white;
    }

    /* Radio buttons styling */
    .radio-group {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin: 30px 0;
    }

    .radio-option {
        position: relative;
    }

    .radio-option input[type="radio"] {
        display: none;
    }

    .radio-option label {
        display: flex;
        align-items: center;
        padding: 15px 25px;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .radio-option input[type="radio"]:checked + label {
        background: #ff69b4;
        border-color: #ff69b4;
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(255, 105, 180, 0.3);
    }

    .radio-option label:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff69b4, #ffb6d9) !important;
        border: none !important;
        padding: 15px 40px !important;
        font-size: 1.2em !important;
        font-weight: bold !important;
        border-radius: 25px !important;
        color: white !important;
        cursor: pointer !important;
        transition: all 0.3s ease !important;
        display: block !important;
        margin: 40px auto 0 !important;
        box-shadow: 0 8px 25px rgba(255, 105, 180, 0.3) !important;
    }

    .btn-primary:hover {
        transform: translateY(-3px) !important;
        box-shadow: 0 15px 35px rgba(255, 105, 180, 0.4) !important;
        background: linear-gradient(135deg, #ffb6d9, #ff69b4) !important;
    }

    .back-link {
        display: inline-block;
        margin-top: 30px;
        color: #ffe0f0;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: white;
        text-decoration: underline;
        transform: translateX(-5px);
    }

    /* Dark mode styles */
    body.dark-mode .form-container {
        background: rgba(74, 28, 58, 0.4);
    }

    body.dark-mode .radio-option label {
        background: rgba(255, 255, 255, 0.05);
    }

    body.dark-mode .radio-option input[type="radio"]:checked + label {
        background: #ff69b4;
    }

    body.dark-mode footer {
        background-color: #2d0f26 !important;
    }

    body.dark-mode footer a {
        color: #e0e0e0 !important;
    }

    body.dark-mode footer a:hover {
        color: white !important;
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .form-container {
            margin: 20px;
            padding: 30px 20px;
        }

        .form-title {
            font-size: 2em;
        }

        .radio-group {
            flex-direction: column;
            gap: 15px;
        }

        .radio-option label {
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .form-title {
            font-size: 1.8em;
        }

        .form-control {
            padding: 10px 14px;
        }

        .btn-primary {
            padding: 12px 30px !important;
            font-size: 1.1em !important;
        }
    }
</style>

