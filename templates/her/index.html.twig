    /* Transition section styles */
    .transition-section {
        position: relative;
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, 
            rgba(255, 105, 180, 0.8) 0%, 
            rgba(255, 182, 217, 0.8) 50%, 
            rgba(255, 255, 255, 0.1) 100%);
        overflow: hidden;
    }

    .transition-content {
        text-align: center;
        z-index: 2;
    }

    .transition-line {
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, transparent, white, transparent);
        margin: 0 auto 20px;
        border-radius: 2px;
        animation: pulse 2s infinite;
    }

    .transition-icon {
        font-size: 2em;
        color: white;
        margin-bottom: 10px;
        animation: bounce 2s infinite;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .transition-icon:hover {
        transform: scale(1.2);
    }

    .transition-text {
        color: white;
        font-size: 1.1em;
        font-weight: 500;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        letter-spacing: 1px;
    }

    /* Animations */
    @keyframes pulse {
        0%, 100% { opacity: 0.5; transform: scaleX(0.8); }
        50% { opacity: 1; transform: scaleX(1); }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-10px); }
        60% { transform: translateY(-5px); }
    }

    /* Dark mode for transition */
    body.dark-mode .transition-section {
        background: linear-gradient(180deg, 
            rgba(74, 28, 58, 0.8) 0%, 
            rgba(45, 15, 38, 0.8) 50%, 
            rgba(255, 255, 255, 0.05) 100%);
    }

